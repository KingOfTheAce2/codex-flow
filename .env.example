# Codex Flow Configuration
# Copy this file to .env and fill in your API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_org_id_here_optional
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here_optional
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini Configuration (Optional)
GOOGLE_API_KEY=your_google_api_key_here_optional
GEMINI_MODEL=gemini-pro

# Hive SDK Configuration
HIVE_API_KEY=your_hive_api_key_here_optional

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# Database Configuration
DB_PATH=./data/codex-flow.db
DB_MEMORY_CACHE=true

# Agent Configuration
MAX_AGENTS=10
DEFAULT_AGENT_TIMEOUT=30000
AGENT_RETRY_ATTEMPTS=3

# Swarm Configuration
SWARM_TOPOLOGY=mesh
SWARM_MAX_SIZE=20
SWARM_SYNC_INTERVAL=5000

# Memory Configuration
MEMORY_TTL=3600000
MEMORY_MAX_SIZE=100

# Tool Configuration
TOOLS_PATH=./tools
ENABLE_FILE_TOOLS=true
ENABLE_GIT_TOOLS=true
ENABLE_CUSTOM_TOOLS=true

# Security Configuration
ENABLE_SANDBOXING=true
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=.js,.ts,.json,.md,.txt,.yaml,.yml

# Performance Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_PROFILING=false

# Debug Configuration
DEBUG=false
VERBOSE=false
TRACE_REQUESTS=false