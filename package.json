{
  "name": "@bear_ai/codex-flow",
  "version": "0.3.1-alpha",
  "description": "Revolutionary AI orchestration system that unifies Claude, Gemini, and OpenAI under intelligent coordination for unprecedented performance",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "bin": {
    "codex-flow": "./bin/codex-flow.js"
  },
  "files": [
    "bin/**/*",
    "src/**/*",
    "ARCHITECTURE.md",
    "MIGRATION_PLAN.md",
    "EXAMPLES.md",
    "CHANGELOG.md",
    "README_NEW.md",
    "tsconfig.json",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "echo 'Skipping build for alpha release'",
    "setup:mcp": "npm install -g ruv-swarm-mcp || echo \"Installing ruv-swarm-mcp globally...\"",
    "postinstall": "npm run setup:mcp || true && npm run setup:mcp && npm run setup:mcp",
    "codex:bootstrap": "powershell -ExecutionPolicy Bypass -File scripts/codex/bootstrap.ps1",
    "codex:verify": "codex-flow config verify && echo \"Configuration: OK\"",
    "codex:swarm": "codex-flow swarm spawn \"Build a simple hello world application\" --providers auto --verbose"
  },
  "keywords": [
    "openai",
    "codex",
    "gpt",
    "multi-agent",
    "swarm",
    "orchestration",
    "cli",
    "mcp",
    "tools"
  ],
  "author": "bear_ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/bear_ai/codex-flow.git"
  },
  "bugs": {
    "url": "https://github.com/bear_ai/codex-flow/issues"
  },
  "homepage": "https://github.com/bear_ai/codex-flow#readme",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.61.0",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "better-sqlite3": "^12.2.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "hive-sdk": "^1.0.3",
    "inquirer": "^8.2.6",
    "open": "^8.4.2",
    "openai": "^5.19.1",
    "ora": "^5.4.1",
    "winston": "^3.15.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "rimraf": "^5.0.5",
    "glob": "^10.3.10",
    "inflight": "^1.0.6"
  }
}
